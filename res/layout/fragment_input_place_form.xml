<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/titlePlaceFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Добавление"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/darkest_blue"
            android:hint="Введите наименование места"
            android:inputType="text" />

        <TextView
            android:id="@+id/hintPlaceDataFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Предлагаемое сокращение"
            android:textSize="18sp"
            android:textColor="@color/darkest_blue"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/shortenedPlaceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите сокращение"
            android:inputType="text"
            android:backgroundTint="@color/darkest_blue"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/addPlaceFragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ДОБАВИТЬ"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_blue"
            android:elevation="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>

